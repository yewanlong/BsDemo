<?xml version="1.0" encoding="utf-8"?>
<com.beisheng.mybslibary.imgsel.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_take_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivTakePhoto"
        android:layout_centerHorizontal="true"
        android:text="拍照" />

</com.beisheng.mybslibary.imgsel.widget.SquareRelativeLayout>
