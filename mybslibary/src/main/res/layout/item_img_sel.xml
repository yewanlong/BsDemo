<?xml version="1.0" encoding="utf-8"?>
<com.beisheng.mybslibary.imgsel.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bs_background"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/ivPhotoCheaked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:src="@mipmap/ic_uncheck" />

</com.beisheng.mybslibary.imgsel.widget.SquareRelativeLayout>
