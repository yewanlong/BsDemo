<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_no_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:onClick="noData">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@mipmap/icon_nodata"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="暂无数据"
        android:textColor="@color/bs_gary"
        android:textSize="@dimen/my14dp" />

    <com.beisheng.mybslibary.widget.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bs_background"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>

