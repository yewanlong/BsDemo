<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bs_white"
    android:orientation="horizontal"
    android:padding="15dp">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:textColor="@color/bs_black"
            android:textSize="@dimen/my16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ellipsize="end"
                android:lines="1"
                android:text="汽车之家"
                android:textColor="@color/bs_grey"
                android:textSize="@dimen/my13sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:lines="1"
                android:text="2019-4-12 17:24:05"
                android:textColor="@color/bs_grey"
                android:textSize="@dimen/my13sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="124dp"
        android:layout_height="84dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_friends_sends_pictures_no" />
</LinearLayout>